{
    "workbench.colorCustomizations": {
        // Fondo del editor (gris oscuro)
        "editor.background": "#2E2E2E",  // Gris oscuro para un fondo neutral y cómodo
        
        // Color de texto en el editor (gris claro)
        "editor.foreground": "#D4D4D4",  // Texto en gris claro para mejorar la legibilidad
        
        // Colores del cursor (amarillo suave para resaltar sin ser agresivo)
        "editorCursor.foreground": "#FFD700",  // Amarillo suave para el cursor
        
        // Color de fondo de la línea activa (resaltado en un tono de azul suave)
        "editor.lineHighlightBackground": "#3A3D40",  // Fondo de línea activa en gris más oscuro
        
        // Color de la selección de texto (un azul oscuro suave)
        "editor.selectionBackground": "#4E5B62",  // Selección de texto en azul suave
        
        // Colores de la terminal (fondo gris oscuro, texto blanco)
        "terminal.background": "#192c55",  // Fondo gris oscuro en la terminal
        "terminal.foreground": "#D4D4D4",  // Texto blanco en la terminal

        // Barra de estado (gris con texto blanco)
        "statusBar.background": "#06c5ff",  // Barra de estado gris oscuro
        "statusBar.foreground": "#130457",  // Texto blanco en la barra de estado

        // Cambiar color de la rama activa en la barra de estado
        "gitDecoration.modifiedResourceForeground": "#07ff45",  // Color de archivos modificados (naranja)
        "gitDecoration.addedResourceForeground": "#187a04",  // Color de archivos añadidos (verde)
        "gitDecoration.deletedResourceForeground": "#FF6347",  // Color de archivos eliminados (rojo)
        "gitDecoration.untrackedResourceForeground": "#A9A9A9",  // Color de archivos no rastreados (gris)

        // Barra de menú (donde están File, Edit, Selection, etc.)
        "menubar.selectionBackground": "#0c6dff",  // Color de fondo para selección en el menú superior
        "menubar.selectionForeground": "#FFFFFF",  // Texto blanco cuando seleccionas una opción en el menú
        "menubar.background": "#333333",  // Fondo de la barra de menú (gris oscuro para mantener la estética

        // Quitar línea divisoria en el menú superior
        "menubar.border": "#00000000",  // Elimina cualquier borde de la barra de menú (transparente)

        // Eliminar líneas divisorias en la barra de estado
        "statusBar.border": "#00000000"  // Elimina la línea divisoria de la barra de estado
    },

    // Configuración para la fuente del editor, puede ajustarse para comodidad visual
    "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.lineHeight": 22,
    "editor.fontLigatures": true,  // Habilitar ligaduras para una mejor legibilidad
        
    // Configuración para las pestañas (comodidad visual)
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.showTabs": true
}
